		{
			"name": "GET care flow process",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Có appointmentId\", function () {\r",
							"    var json = pm.response.json();\r",
							"    pm.expect(json).to.have.property('appointmentId');\r",
							"});\r",
							"\r",
							"pm.test(\"Có field stages là array\", function () {\r",
							"    var json = pm.response.json();\r",
							"    pm.expect(json.stages).to.be.an('array');\r",
							"});\r",
							"\r",
							"pm.test(\"Có stage Đang chờ (màu vàng)\", function () {\r",
							"    var json = pm.response.json();\r",
							"    var waiting = json.stages.find(s => s.status === 'WAITING');\r",
							"    pm.expect(waiting).to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Có stage Hoàn thành (màu xanh)\", function () {\r",
							"    var json = pm.response.json();\r",
							"    var completed = json.stages.find(s => s.status === 'DONE');\r",
							"    pm.expect(completed).to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Có stage Chưa Khám(màu xám)\", function () {\r",
							"    var json = pm.response.json();\r",
							"    var not_started = json.stages.find(s => s.status === 'NOT_STARTED');\r",
							"    pm.expect(not_started).to.exist;\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
